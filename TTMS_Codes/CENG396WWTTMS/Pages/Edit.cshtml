                <span asp-validation-for="Trouble.CrewAssignedId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Trouble.TicketState" class="control-label"></label>
                <input asp-for="Trouble.TicketState" class="form-control" />
                <span asp-validation-for="Trouble.TicketState" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
